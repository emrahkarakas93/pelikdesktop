{
  "name": "pelik",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "description": "Pelik Desktop Application",
  "author": "Pelik Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/emrahkarakas93/pelikdesktop"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "axios": "^1.7.9",
    "bootstrap": "^5.3.3",
    "dotenv": "^16.4.7",
    "electron-log": "^5.1.1",
    "electron-updater": "^6.1.8",
    "express": "^4.21.2",
    "getmac": "^6.6.0",
    "helmet": "^8.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.4.0",
    "react-router-dom": "^7.0.2",
    "react-scripts": "^5.0.1",
    "sweetalert2": "^11.15.10"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "wait-on": "^8.0.1"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "react-scripts build",
    "electron-build": "npm run build && electron-builder --publish never",
    "deploy": "npm run build && electron-builder --publish always"
  },
  "build": {
    "appId": "com.pelik.app",
    "productName": "Pelik",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "publish": {
      "provider": "github",
      "owner": "emrahkarakas93",
      "repo": "pelikdesktop"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Pelik"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
